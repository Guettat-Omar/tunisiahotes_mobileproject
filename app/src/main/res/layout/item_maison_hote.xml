<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Image de la maison -->
        <ImageView
            android:id="@+id/ivMaisonImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:contentDescription="Image de la maison"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/placeholder_image" />

        <!-- Nom de la maison -->
        <TextView
            android:id="@+id/tvNomMaison"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/ivMaisonImage"
            app:layout_constraintStart_toEndOf="@id/ivMaisonImage"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Maison Hannibal" />
        <ImageButton
            android:id="@+id/btnEditMaison"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/maison_edit"
            android:src="@android:drawable/ic_menu_edit"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteMaison"
            app:layout_constraintTop_toTopOf="@id/tvNomMaison" />

        <ImageButton
            android:id="@+id/btnDeleteMaison"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/maison_delete"
            android:src="@android:drawable/ic_menu_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvNomMaison" />

        <!-- Région et Ville -->
        <TextView
            android:id="@+id/tvRegionVille"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tvNomMaison"
            app:layout_constraintStart_toEndOf="@id/ivMaisonImage"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Tunis - Tunis" />

        <!-- Avis -->
        <TextView
            android:id="@+id/tvAvis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/rating"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvRegionVille"
            app:layout_constraintStart_toEndOf="@id/ivMaisonImage"
            tools:text="★ 9.5/10" />

        <!-- Prix -->
        <TextView
            android:id="@+id/tvPrix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvAvis"
            app:layout_constraintStart_toEndOf="@id/ivMaisonImage"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="220 TND/nuit (2 pers.)" />

        <!-- Bouton Plus de détails -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:text="@string/btn_plus_details"
            android:textSize="12sp"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/ivMaisonImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnReserver" />
        <!-- Bouton Découvrir plus -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReserver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="4dp"
            android:text="@string/btn_reserver"
            android:textSize="12sp"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button"
            app:layout_constraintTop_toBottomOf="@id/ivMaisonImage"
            app:layout_constraintStart_toEndOf="@id/btnDetails"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>